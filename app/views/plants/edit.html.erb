<h1>Plants#edit</h1>

 <%= form_for(@plant) do |f| %>
  <label>Change plant nickname:</label><br>
  <%= f.text_field :plant_nickname %><br>
  
  <label>Repot plant on:</label><br>
  <%= f.text_area :repot %><br>

  <label>Change plant location:</label><br>
  <%= f.check_box("indoor", {}, "yes", "no") %><br>
  <%= f.check_box( "outdoor", {}, "yes", "no") %><br>
  
  <%= f.submit %>
<% end %>
